html, body
  width 100%
  height 100%
  padding 0
  margin 0
  font-family sans-serif

body
  background black
  color white

#root, canvas
  width 100%
  height 100%

#root
  display flex
  flex-direction column
  align-items center
  justify-content center

canvas
  cursor grab



.hidden
  display none

.error
  min-width 400px
  padding 40px
  background #440000
